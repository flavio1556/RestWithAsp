networks:
  API-rest-network:
    driver: bridge
services:
  db:
    build:
      context: D:\WorkSpace\RestWithAsp\RestWithAsp\RestWithASPNET
      dockerfile: db/Dockerfile
    command: mysqld --default-authentication-plugin=mysql_native_password
    environment:
      MYSQL_DATABASE: rest_with_asp_net
      MYSQL_PASSWORD: docker
      MYSQL_ROOT_PASSWORD: docker
      MYSQL_USER: docker
      TZ: America/Sao_Paulo
    image: rest-with-aspnet-db
    networks:
      API-rest-network: null
    ports:
    - published: 3398
      target: 3306
    restart: always
  rest-with-aspnet:
    build:
      context: D:\WorkSpace\RestWithAsp\RestWithAsp\RestWithASPNET
      dockerfile: RestWithASPNET/Dockerfile
    depends_on:
      db:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Production
      TZ: America/Sao_Paulo
    image: rest-with-aspnet
    networks:
      API-rest-network: null
    ports:
    - published: 44300
      target: 80
version: '3.4'